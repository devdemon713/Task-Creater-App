<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
           <div class="main w-full min-h-screen bg-zinc-900">
              <div class="form p-10  text-white">
                    <form action="/create" method="post">
                         <input class="w-full rounded-md  block outline-none px-5 py-2 bg-zinc-800" type="text" placeholder="title goes here" name="title">
                         <textarea class=" w-full mt-2 block px-5 py-2 resize-none bg-zinc-800" placeholder="Write your task details here" name="details"></textarea>
                         <input class="mt-2 bg-blue-600 px-5 py-2" type="submit" value="Create Task">
                    </form>
              </div>
              
              
                <div class="tasks p-10 flex gap-3 flex-wrap " >

                        <% if(files.length>0){ %>
                  <%files.forEach(function(val){ %>
                        <div class="task  p-10  w-72 px-3 py-3 rounded-md bg-zinc-800">
                   <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                   <div class= "mt-3 flex w-full justify-between items-center">
                    <a class="text-blue-500 inline-block " href="/files/<%= val %>">Read More</a>
                   <a class="text-zinc-600 "  href="/edit/<%= val %>">Edit Filename</a></div>
              </div>
             <%  }) %>

                <%}  else{ %>
                     <h1 class="text-zinc-600 rounded-md">No Tasks Yet</h1>
                <%}%>

                  
             
                </div>
           </div>
</body>
</html>


